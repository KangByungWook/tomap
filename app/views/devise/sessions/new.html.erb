<br><br><br><br><br><br>
<div style="text-align:center">
<p style="font-size:50px"><b><span style="color:red;">TO</span>map <span style="">Login</span></b></p>
<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
</div><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin"}) do |f| %>

  <div class="field">
    <%= f.label :email%><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "이메일을 입력해주세요"  %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "비밀번호를 입력해주세요" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-block btn-default" %>
  </div>

<div>
<center><%= render "devise/shared/links" %></center>
</div>
<% end %>


